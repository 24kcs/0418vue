@import "./reset.css"
@import "./mixins.styl"
$mainColor=#02a774
.app
  width 100%
  height 100%
  .footer
    top-border-1px(#ddd)
    width 100%
    height 50px
    position fixed
    left 0
    bottom 0
    display flex
    .footerItem
      display flex
      flex 1
      justify-content center
      align-items center
      flex-direction column
      .iconfont
        font-size 20px
      .itemText
        margin-top 3px
      &.active
        color $mainColor

